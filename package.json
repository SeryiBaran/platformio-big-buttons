{
  "name": "platformio-big-buttons",
  "displayName": "PlatformIO Big Buttons",
  "description": "VSCode extension that adds large buttons for building, uploading, etc. for PlatformIO.",
  "version": "1.0.3",
  "publisher": "SeryiBaran",
  "repository": {
    "url": "https://github.com/SeryiBaran/platformio-big-buttons"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "platformio-big-buttons.buttons",
          "name": "PlatformIO Big Buttons"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "ESLINT_USE_FLAT_CONFIG=trueeslint src --ext ts -c eslint.config.mjs",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.2"
  }
}
